[user]
	email = chris@improbable.org
	name = Chris Adams
	signingkey = 4F67E839C4923CE9

[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
	autocrlf = input
	precomposeunicode = true
	pager = most

[merge]
    tool = diffmerge

[mergetool "diffmerge"]
    cmd = diffmerge --merge --result="$MERGED" "$LOCAL" "$BASE" "$REMOTE"
    trustExitCode = false

[github]
	user = acdha
    password = !security find-internet-password -a acdha -gs https://github.com -w | tr -d '\n'

[color]
    branch = true
    diff = true
    status = true

[alias]
    lg = log --oneline --graph --decorate --abbrev-commit --date=relative
    lga = log --oneline --graph --decorate --abbrev-commit --date=relative --all
    mt = mergetool --no-prompt
	diff = diff --word-diff=color

[rerere]
    enabled = 1

[diff "minified-css"]
    textconv = prettier --parser=css

[diff "minified-js"]
    textconv = prettier --parser=babel

[diff "xml-tidy"]
    textconv = xml-tidy

[diff "jsonpretty"]
    textconv = python -mjson.tool

[diff "msgcat"]
    textconv = msgcat --no-location --sort-output

[diff "xml2rfc"]
    textconv = xml2rfc --quiet --out=/dev/stdout

[branch]
	autosetuprebase = always
	autosetupmerge = always

[push]
	default = current

[diff "csv"]
	wordRegex = [^,]
[diff "tsv"]
	wordRegex = [^\t]

[mergetool]
	keepBackup = false
[rebase]
	autosquash = true
[pull]
	ff = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[diff]
	algorithm = patience
[credential]
	helper = osxkeychain
[commit]
	gpgSign = false
[init]
	templateDir = $HOME/.local/git-template

[remote "origin"]
	prune = true
[fetch]
	prune = true
	pruneTags = true
