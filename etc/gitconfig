[core]
excludesfile = /Users/chris/.gitignore

[merge]
    tool = diffmerge

[mergetool "chdiff"]
    cmd = /usr/bin/env chdiff --wait "$LOCAL" "$REMOTE"
    keepBackup = false
    trustExitCode = false

[mergetool "diffmerge"]
    cmd = diffmerge --merge --result="$MERGED" "$LOCAL" "$BASE" "$REMOTE"
    trustExitCode = false

