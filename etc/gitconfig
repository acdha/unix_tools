[user]
	email = chris@improbable.org
	name = Chris Adams

[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
	autocrlf = input
	precomposeunicode = true

[merge]
    tool = diffmerge

[mergetool "chdiff"]
    cmd = /usr/bin/env chdiff --wait "$LOCAL" "$REMOTE"
    keepBackup = false
    trustExitCode = false

[mergetool "diffmerge"]
    cmd = diffmerge --merge --result="$MERGED" "$LOCAL" "$BASE" "$REMOTE"
    trustExitCode = false

[github]
	user = acdha
    password = !security find-internet-password -a acdha -gs https://github.com -w | tr -d '\n'

[color]
    branch = true
    diff = true
    status = true

[alias]
    lg = log --oneline --graph --decorate --abbrev-commit --date=relative
    lga = log --oneline --graph --decorate --abbrev-commit --date=relative --all
    mt = mergetool --no-prompt

[difftool "chdiff"]
    cmd = /usr/bin/env chdiff --wait "$LOCAL" "$REMOTE"

[rerere]
    enabled = 1

[diff "minified-css"]
    textconv = cssbeautify

[diff "minified-js"]
    # See https://github.com/einars/js-beautify
    textconv = js-beautify

[diff "xml-tidy"]
    textconv = xml-tidy

[diff "jsonpretty"]
    textconv = python -mjson.tool

[diff "msgcat"]
    textconv = msgcat --no-location --sort-output

[branch]
	autosetuprebase = always
[push]
	default = current
[diff "csv"]
	wordRegex = [^,]
[diff "tsv"]
	wordRegex = [^\t]

[mergetool]
	keepBackup = false
[rebase]
	autosquash = true
