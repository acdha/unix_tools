[user]
    email = chris@improbable.org
    name = Chris Adams

[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
    autocrlf = input

[merge]
    tool = diffmerge

[mergetool "chdiff"]
    cmd = /usr/bin/env chdiff --wait "$LOCAL" "$REMOTE"
    keepBackup = false
    trustExitCode = false

[mergetool "diffmerge"]
    cmd = diffmerge --merge --result="$MERGED" "$LOCAL" "$BASE" "$REMOTE"
    trustExitCode = false

[github]
    user = acdha

[color]
    branch = true
    diff = true
    status = true

[alias]
    lg = log --oneline --graph --decorate --abbrev-commit --date=relative
    lga = log --oneline --graph --decorate --abbrev-commit --date=relative --all

[rerere]
    enabled = 1

[diff "minified-css"]
    textconv = csstidy

[diff "minified-js"]
    # See https://github.com/einars/js-beautify
    textconv = js-beautify

[diff "xml-tidy"]
    textconv = xml-tidy

[diff "jsonpretty"]
    textconv = python -mjson.tool

[diff "msgcat"]
    textconv = msgcat --no-location
[hub]
	protocol = https
